@model PizzaFormModel

<div class="container">
    <h2 class="text-center mt-3">Crea una nuova Pizza!</h2>
    <form class="p-5" id="create-form">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome Pizza</label>
            <input type="text" class="form-control" id="nome" placeholder="Inserisci il nome della pizza">
            <span id="nome-error" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label for="descrizione" class="form-label">Descrizione della pizza</label>
            <input type="text" class="form-control" id="descrizione" placeholder="Es. pomodoro, mozzarella...">
            <span id="descrizione-error" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label for="foto" class="form-label">Foto della pizza</label>
            <input type="text" class="form-control" id="foto" placeholder="url o percorso foto...">
            <span id="foto-error" class="text-warning"></span> 
        </div>
        <div class="mb-3">
            <label for="prezzo" class="form-label">Prezzo</label>
            <input type="number" class="form-control" id="prezzo" placeholder="Es. 5€" step="0.01">
            <span id="prezzo-error" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label for="categoriaId" class="form-label">Categoria</label>
            <select class="form-select" id="categoriaId">
                <option value="0"></option>
            </select>
            <span id="categoriaId-error" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label>Ingredienti</label>
            <div id="ingredienti"></div>
        </div>
        <button type="submit" class="btn btn-primary">Crea</button>
    </form>
</div>

@section Scripts
    {
    <script>
        loadCategories();
        loadIngredients();
        initCreateForm();
    </script>
}